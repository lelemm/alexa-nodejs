{
  "name": "alexa-nodejs",
  "version": "1.0.0",
  "description": "Node.js/TypeScript library for controlling Amazon Alexa devices programmatically",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "watch": "tsc --watch",
    "clean": "rimraf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prepublishOnly": "yarn clean && yarn build"
  },
  "keywords": [
    "alexa",
    "amazon",
    "echo",
    "smart-home",
    "typescript",
    "nodejs"
  ],
  "author": "Migrated from AlexaPy",
  "license": "Apache-2.0",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "https-proxy-agent": "^7.0.2",
    "speakeasy": "^2.0.0",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.7",
    "@types/node": "^20.8.9",
    "@types/speakeasy": "^2.0.7",
    "@types/uuid": "^9.0.6",
    "@types/ws": "^8.5.8",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-repo/alexa-nodejs.git",
    "directory": "packages/alexa-nodejs"
  },
  "bugs": {
    "url": "https://github.com/your-repo/alexa-nodejs/issues"
  },
  "homepage": "https://github.com/your-repo/alexa-nodejs#readme"
}
